{
    "extends": "astro/tsconfigs/strict",
    "include": [
        ".astro/types.d.ts",
        "**/*"
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@css/*": [
                "src/css/*"
            ],
            "@js/*": [
                "src/js/*"
            ],
            "@img/*": [
                "src/img/*"
            ],
            "@game/*": [
                "src/components/game/*"
            ],
            "@mechanics/*": [
                "src/components/game/mechanics/*"
            ],
            "@ui/*": [
                "src/components/ui/*"
            ],
            "@forms/*": [
                "src/components/ui/forms/*"
            ],
            "@node/*": [
                "node_modules/*"
            ]
        }
    }
}
